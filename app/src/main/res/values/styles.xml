<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Custom edittext style -->
    <style name="editTextBox" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/box_email</item>
        <item name="android:drawablePadding">@dimen/padding_edtdrawable</item>
        <item name="android:paddingLeft">@dimen/padding_editext</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--Rating bar custom-->
    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">@dimen/rating_max_height</item>
        <item name="android:indeterminateDrawable">@drawable/custom_rating_star</item>
        <item name="android:progressDrawable">@drawable/custom_rating_star</item>
        <item name="android:minHeight">@dimen/rating_min_height</item>
        <item name="android:numStars">5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Rating bar feedback activity -->
    <style name="myFeedbackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">@dimen/feedback_rating_max_height</item>
        <item name="android:indeterminateDrawable">@drawable/custom_feedback_star</item>
        <item name="android:progressDrawable">@drawable/custom_feedback_star</item>
        <item name="android:minHeight">@dimen/feedback_rating_min_height</item>
        <item name="android:numStars">5</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- For custom tab layout of myjob activity -->
    <style name="customTabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!--Job title textview style-->
    <style name="jobTitleTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_job_title</item>
    </style>


    <!--Job type textview style-->
    <style name="jobTypeTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text_job_type_and_date</item>
        <item name="android:textSize">@dimen/text_size_job_type</item>
    </style>


    <!-- Job date textview style-->
    <style name="jobDateTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_text_job_type_and_date</item>
        <item name="android:textSize">@dimen/text_size_job_date</item>
    </style>

    <!-- job description textview style -->
    <style name="jobDescriptionTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_job_description</item>
        <item name="android:textColor">@color/color_description</item>
    </style>


    <!-- job Address textview style -->
    <style name="jobAddressTextViewStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_text_address</item>
        <item name="android:textSize">@dimen/text_size_job_address</item>

    </style>
</resources>
