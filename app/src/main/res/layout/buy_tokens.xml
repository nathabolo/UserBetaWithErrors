<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_icon"
        android:orientation="vertical">



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_10dp"
        android:layout_height="wrap_content">






    </LinearLayout>

        <com.munye.component.MyFontButton
            android:id="@+id/btnInvoiceOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="ZAR 10 for 5 Tokens"
            android:background="@color/colorPrimary"/>

        <com.munye.component.MyFontButton
            android:id="@+id/btnInvoiceCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="ZAR 20 for 12 Tokens"
            android:background="@color/colorPrimary"/>


        <com.munye.component.MyRaidProTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20dp"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/margin_15dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:text="WHAT IS A TOKEN?"/>

        <com.munye.component.MyRaidProTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Tokens are the credit that allows JimmieJobs Services. Whenever you send a Job Request for a Quotation a token is deducted from your account"/>


        <com.munye.component.MyRaidProTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20dp"
        android:textColor="@color/color_black"
        android:drawablePadding="@dimen/margin_15dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="WHY BUY TOKENS ?"
        android:id="@+id/msg"/>

    <com.munye.component.MyRaidProTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Tokens are the credit that allows access the JimmieJobs Services. Whenever you send a Job Request for a Quotation a token is deducted from your account"/>


        <com.munye.component.MyRaidProTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_20dp"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/margin_15dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="HOW CAN I GET TOKENS ?"/>

        <com.munye.component.MyRaidProTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:text="Tokens can also be obtained for free by sharing JimmieJobs on Facebook via the Share To Earn Tokens Option on the Menu"/>



        <com.munye.component.MyRaidProTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:text="After Selecting the Amount of Tokens Required, Enter your Card Payment Details and make the purchase"/>





</LinearLayout></ScrollView></LinearLayout>