<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/d_b_img"
    android:padding="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/imgViewCloseDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:padding="@dimen/margin_10dp"
        android:src="@drawable/close_popup"
        android:tint="@color/colorPrimary" />


    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtDisclaimer"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <com.munye.component.MyFontEditText
        android:id="@+id/edtCreditCardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_5dp"
        android:background="@drawable/custom_edittext_add_card"
        android:textColor="@color/colorPrimary"
        android:hint="Credit card number"
        android:inputType="number"
        android:padding="@dimen/margin_15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marging_15dp"
        android:orientation="horizontal">

        <com.munye.component.MyFontEditText
            android:id="@+id/edtCardMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marging_15dp"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_add_card"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="mm"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="@dimen/margin_15dp" />


        <com.munye.component.MyFontEditText
            android:id="@+id/edtCardYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/marging_15dp"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_add_card"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:textColor="@color/colorPrimary"
            android:hint="yy"
            android:maxLength="2"
            android:inputType="number"
            android:padding="@dimen/margin_15dp" />


        <com.munye.component.MyFontEditText
            android:id="@+id/edtCardCvv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_add_card"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:hint="cvv"
            android:maxLength="4"
            android:inputType="number"
            android:padding="@dimen/margin_15dp" />

    </LinearLayout>

    <com.munye.component.MyFontButton
        android:id="@+id/btnSubmitCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25dp"
        android:background="@drawable/custom_button_shape"
        android:text="MAKE PAYMENT"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_button" />

</LinearLayout>
